<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0667ff"
    android:orientation="vertical"
    tools:context=".fragments.EnterPhoneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Welcome "

            android:textColor="@color/white"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Please type your phone number so we can verify you. "
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/background_round_top"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="SIGNUP"
                android:textSize="@dimen/_24ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="Name"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/_16ssp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/round_person_24"
                android:drawableTint="@color/black"
                android:hint="Name"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="Phone Number"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/_16ssp" />

            <EditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/round_phone_24"
                android:layout_marginTop="4dp"
                android:drawableTint="@color/black"
                android:hint="+123 4567890"
                android:textColor="@color/black"
                android:inputType="phone"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_getOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#0667ff"
            android:text="Get otp"/>
    </LinearLayout>




</LinearLayout>